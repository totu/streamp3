extends layout

block content
  nav(role='navigaton').navbar.navbar-static-top.navbar-inverse
    div.container-fluid
      div.navbar-header
        a(href='#').navbar-brand
          strong.logo-normal Audio
          span.lobster.logo-lobster Streamer
        span.navbar-text.navbar-right.folder-size= Math.floor(size/1024/1024) + " MB"

  table.table.table-striped
    if files[0].sub
      tr
        td
          div(data-back="true").file
            span.glyphicon.glyphicon-share-alt.backwards.play-button
            span Back
    each file in files

      tr
        td
          if file.dir
            div(data-file=file.file).file
              if file.sub
                span.glyphicon.glyphicon-folder-open.play-button.sub
              else
                span.glyphicon.glyphicon-folder-open.play-button
              span.file-name= file.name
          else
            div(data-file=file.file).file.playable
              if file.sub
                span.glyphicon.glyphicon-play.play-button.sub
              else
                span.glyphicon.glyphicon-play.play-button
              span.file-name

